# GCP Firecracker VM Deployment Configuration

# Project Configuration
PROJECT_ID="td-labs"          # Replace with your GCP project ID
REGION="us-central1"
ZONE="us-central1-a"
INSTANCE_NAME="tutorials-dojo-firecracker"

# VM Configuration
MACHINE_TYPE="n1-standard-2"              # 2 vCPUs, 7.5GB RAM
BOOT_DISK_SIZE="50GB"
DISK_TYPE="pd-ssd"                        # SSD for better performance

# Network Configuration
NETWORK="default"
TAGS="firecracker-vm,http-server,https-server"

# Application Configuration
APP_PORT=8080
NODE_ENV=production

# Firecracker Configuration
FIRECRACKER_VM_MEMORY=128                 # MB per VM
FIRECRACKER_VM_VCPUS=1
FIRECRACKER_VM_TIMEOUT=30                 # Seconds

# Security Configuration
ENABLE_FIREWALL=true
ALLOWED_SOURCE_RANGES="0.0.0.0/0"        # Restrict this in production

# Backup Configuration
AUTO_BACKUP=false
BACKUP_RETENTION_DAYS=7

# Monitoring Configuration
ENABLE_MONITORING=true
LOG_LEVEL="info"

# SSL Configuration (for production)
ENABLE_SSL=false
SSL_CERT_PATH=""
SSL_KEY_PATH=""

# Database Configuration (if using external database)
DATABASE_URL=""
DATABASE_TYPE="sqlite"                    # sqlite, postgres, mysql

# Environment Variables for the Application
export NODE_ENV=$NODE_ENV
export PORT=$APP_PORT
export FIRECRACKER_VM_MEMORY=$FIRECRACKER_VM_MEMORY
export FIRECRACKER_VM_VCPUS=$FIRECRACKER_VM_VCPUS
export FIRECRACKER_VM_TIMEOUT=$FIRECRACKER_VM_TIMEOUT
